---
import Base from "@/layouts/Base.astro";
---
<Base title="Get Involved" description="Volunteer, host a house party, or request a yard sign.">
  <h1 class="text-3xl font-bold mb-6">Get Involved</h1>
  <form name="volunteer" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="card grid gap-4 max-w-xl">
    <input type="hidden" name="form-name" value="volunteer" />
    <p class="hidden"><label>Donâ€™t fill this out: <input name="bot-field" /></label></p>
    <label class="grid gap-1">Name<input class="border rounded p-2" name="name" required /></label>
    <label class="grid gap-1">Email<input class="border rounded p-2" name="email" type="email" required /></label>
    <label class="grid gap-1">Phone<input class="border rounded p-2" name="phone" /></label>
    <label class="grid gap-1">How can you help?<textarea class="border rounded p-2" name="message" rows="4"></textarea></label>
    <button class="btn w-max">Submit</button>
  </form>
</Base>
